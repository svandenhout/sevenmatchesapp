<Alloy>
	<Window id="player" class="container">
	  <View class="header">
      <Label class="smallLabel">speler</Label>
    </View>
	  <View class="playerInfo">
	    <ImageView class="playerImage"></ImageView>
	    <View class="playerInfoTextContainer">
	      <Label class="playerInfoText" id="firstName" />
        <Label class="playerInfoText" id="lastName" />
	    </View>
	  </View>
	  
	  <ListView id="playerBtns" defaultItemTemplate="playerBtns">
	    
      <Templates>
        <ItemTemplate name="playerBtns">
          <View onClick="reviews">
            <Label class="mediumLabel" bindId="title"></Label>
          </View>
        </ItemTemplate>
      </Templates>
      
      <ListSection name="buttons">
        <ListItem title:text="Beoordelingen"></ListItem>
      </ListSection>
    </ListView>
    
	</Window>
</Alloy>