<Alloy>
	<Window id="index" class="container">
	  <View class="header"></View>
		<ListView id="teamList" defaultItemTemplate="teamsTemplate">
		  <Templates>
        <ItemTemplate class="listItem" name="teamsTemplate">
          <View onClick="showTeamDetail">
            <View id="teamName">
              <Label class="mediumLabel" bindId="name"/>
            </View>
            <View id="teamInfo">
              <Label id="players" class="smallLabel" bindId="players" />
              <Label id="keepers" class="smallLabel" bindId="keepers" />
            </View>
          </View>
        </ItemTemplate>
      </Templates>
		  <ListSection name="teams">
  	    
      </ListSection>
		</ListView>
	</Window>
</Alloy>