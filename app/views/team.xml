<Alloy>
	<Window id="team" class="container">
	  <View class="header">
      <Label class="smallLabel">team</Label>
    </View>
	  <ListView id="playerList" defaultItemTemplate="playersTemplate">
      <Templates>
        <ItemTemplate name="playersTemplate">
          <View onClick="showPlayerDetail">
            <Label class="mediumLabel" bindId="name"></Label>
          </View>
        </ItemTemplate>
      </Templates>
      
      <ListSection name="players"/>

      <ListSection name="keepers"/>
      
    </ListView>
	</Window>
</Alloy>