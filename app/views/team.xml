<Alloy>
	<Window id="team">
	  <ListView id="playerList" >
      <Templates>
        <ItemTemplate name="playersTemplate">
          <View onClick="showPlayerDetail">
            <Label bindId="name.full" class="name"/>
          </View>
        </ItemTemplate>
        
        <ItemTemplate name="keepersTemplate">
          <View onClick="showPlayerDetail">
            <Label bindId="name.full" class="name"/>
          </View>
        </ItemTemplate>
      </Templates>
      <ListSection name="players" defaultItemTemplate="playersTemplate">
        
      </ListSection>
      <ListSection name="keepers" defaultItemTemplate="keepersTemplate">
        
      </ListSection>
    </ListView>
	</Window>
</Alloy>