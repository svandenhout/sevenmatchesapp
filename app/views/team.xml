<Alloy>
	<Window id="team" class="container">
	  <View class="header">
      <Label class="smallLabel">team</Label>
    </View>
	  <ListView id="playerList" defaultItemTemplate="playerItem">
      <Templates>
        <ItemTemplate name="playerItem">
          <View onClick="showPlayerDetail">
            <Label class="largeLightLabel" bindId="name"></Label>
          </View>
        </ItemTemplate>
        
        <ItemTemplate class="odd" name="playerItemEven">
          <View onClick="showPlayerDetail">
            <Label class="largeLightLabel" bindId="name"></Label>
          </View>
        </ItemTemplate>
        
        <ItemTemplate name="playerItemHeader">
          <Label class="largeBoldLabel" bindId="title" />
        </ItemTemplate>
      </Templates>
      
      <ListSection name="players"/>

      <ListSection name="keepers"/>
      
    </ListView>
	</Window>
</Alloy>