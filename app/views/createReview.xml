<Alloy>
	<Window id="createReview" class="container">
	  <View class="header">
      <Label class="smallLabel">nieuwe beoordeling</Label>
    </View>
    
	  <ListView id="reviewItemList" defaultItemTemplate="reviewItem">
      
      <Templates>
        <ItemTemplate name="reviewItem">
          <View class="leftView">
            <Label bindId="itemTitle"></Label>
          </View>
          <View class="rightView">
            <Slider onChange="changeScore" min="1" max="10" value="0" />
          </View>
          
        </ItemTemplate>
      </Templates>
      
      <ListSection name="personality" />
      
      <ListSection name="technique" />
      
      <ListSection name="tactics" />
      
      <ListSection name="physical" />
      
    </ListView>
    
    <Button class="footerBtn" onClick="createReview">
      Beoordeling Opslaan
    </Button>
    
	</Window>
</Alloy>