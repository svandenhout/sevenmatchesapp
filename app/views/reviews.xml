<Alloy>
	<Window id="reviews" class="container">
	  <View class="header">
      <Label class="smallLabel">beoordelingen</Label>
    </View>
	  <ListView id="reviewList" defaultItemTemplate="reviews">
      
      <Templates>
        <ItemTemplate name="reviews">
          <View class="leftView" id="reviewDate">
            <Label class="largeLightLabel" bindId="date"></Label>
          </View>
          <View class="rightView" id="reviewScore">
            <Label class="largeLightLabel" bindId="score"></Label>
          </View>
        </ItemTemplate>
      </Templates>
      
      <ListSection name="review" />
      
    </ListView>

    <Button class="footerBtn" id="newReviewBtn" onClick="newReview">Nieuwe Beoordeling</Button>

	</Window>
</Alloy>